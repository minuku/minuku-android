<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.06"
        android:background="@color/black"
        android:gravity="center"
        android:text="請選擇您的移動方式"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp" />

    <Button
        android:id="@+id/walk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/instabug_annotation_color_yellow"
        android:drawableLeft="@drawable/walk"
        android:drawableRight="@drawable/if_ic_keyboard_arrow_right_48px_352468"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="走路"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/reject_button"
        android:drawableLeft="@drawable/bike"
        android:drawableRight="@drawable/if_ic_keyboard_arrow_right_48px_352468"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="自行車"
        android:textSize="24sp" />

    <Button
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/step_pager_previous_tab_color"
        android:drawableLeft="@drawable/car"
        android:drawableRight="@drawable/if_ic_keyboard_arrow_right_48px_352468"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="汽車"
        android:textSize="24sp" />

    <Button
        android:id="@+id/site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/cardview_light_background"
        android:drawableLeft="@drawable/if_94_171453"
        android:drawableRight="@drawable/if_ic_keyboard_arrow_right_48px_352468"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="定點"
        android:textSize="24sp" />

</LinearLayout>